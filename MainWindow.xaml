<Window x:Class="_32.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_32"
        mc:Ignorable="d"
        Title="SnakeBite" Height="400" Width="525">
    <Grid>
        <Image Source="images/potatoo.jpg" Stretch="Fill"></Image>
        <TextBlock Margin="20 20">SnackBite</TextBlock>
        <TextBlock Margin="20 35">Eat 25 Eggs using Arrow Keys</TextBlock>
        <TextBlock Margin="20 50">press ESC to pause while playing</TextBlock>
        <Button Width="100" Height="40"
                HorizontalAlignment="Left"
                Margin="120,200 0 0"
                FontSize="20"
                x:Name="btnPlay" Background="White" Click="btnPlay_Click">Play</Button>
        <Button Width="100" Height="40"
                HorizontalAlignment="Left"
                Margin="300,200 0 0"
                FontSize="20"
                x:Name="btnQuit" Background="White" Click="btnQuit_Click" >Quit</Button>
    </Grid>
</Window>
